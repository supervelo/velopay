{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": false,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es6", "dom", "es2015"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "sourceMap": false,
      "strict": true,
      "target": "es6"
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts"]
}
